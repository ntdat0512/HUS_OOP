public class CheckOddEven {
    public static void main(String[] args) {
        int number = 50;
        System.out.println("The number is " + number);
        if( number%2 == 0){
            System.out.println(number + " is" + " EVEN");
        }else{
            System.out.println(number + "is" + "ODD");
        }
        System.out.println("Bye!");
    }
}
